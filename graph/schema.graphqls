# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Todo {
  id: ID!
  text: String!
  done: Boolean!
  user: User!
}

type User {
  id: ID!
  name: String!
}

type Goods{
    id: Int!
    goodsName: String!
    price: Int!
    stock: Int!
    brand: Brands
    category: GoodsCategorys
}

type Brands{
    id: Int!
    brandName: String!
}

type GoodsCategorys{
    id: Int!
    categoryName: String!
}

type Query {
  todos: [Todo!]!
  goodes: [Goods!]!
  findGood(id: Int!): Goods!
  findBrand(id: Int!): Brands!

}

input NewGoods{
    goodsName: String!
    price: Int!
    stock: Int!
    brandId: Int!
}

input NewTodo {
  text: String!
  userId: String!
}

input NewBrand{
    brandName: String!
}

input NewCategory{
    categoryName: String!
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
  createGoods(input: NewGoods!): Goods!
  createBrand(input: NewBrand!): Brands!
  createCategory(input: NewCategory!): GoodsCategorys!
}